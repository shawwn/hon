			<instance name="spark"  size="75" a="Bip01 L Hand" b="Bip01 L Forearm"/>
			<instance name="spark"  size="75" a="Bip01 R Hand" b="Bip01 R Forearm"/>
			
			<instance name="spark" size="75"  a="Bip01 L Thigh" b="Bip01 L Calf"/>
