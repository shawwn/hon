				/>
			</simpleemitter>

			<billboard
				life="150"
				material="/shared/effects/materials/whitedot.material"
				startsize="60"
				endsize="280"
				depthbias="-30"
				startcolor=".75 .55 0"
				midcolor=".55 .15 0"
				endcolor="0"
			/>

			<billboard
				life="200"
				material="/shared/effects/materials/corona_07.material"
				startsize="100"
				endsize="350"
				depthbias="-30"
				startcolor=".1"
				endcolor="0"
				lockup="1"
				pitch="90"
			/>

