// Renders an alpha-tested depth
//=============================================================================


//=============================================================================
// Global variables
//=============================================================================


//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
	float2 Texcoord0 : TEXCOORD0;
	float2 Depth     : TEXCOORD1;
};


//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};


sampler opacity;

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;

	Out.Color = float4(0.0f, 0.0f, 0.0f, tex2D(opacity, In.Texcoord0).a);
		
	return Out;
}