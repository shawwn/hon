// Particle refraction pixel shader
//=============================================================================

//=============================================================================
// Global variables
//=============================================================================

//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
	float4 Color0           : COLOR0;
	float4 Texcoord0        : TEXCOORD0;
	float2 Texcoord1        : TEXCOORD1;
	float4 TexcoordPosition : TEXCOORD2;
};

//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};

sampler refraction;
sampler mask;
sampler scene;

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;
	
	float4 vRefraction = tex2D(refraction, In.Texcoord0.xy) * 2.0f - 1.0f;
	
	vRefraction *= tex2D(mask, In.Texcoord1);
	
	float2 vSceneTexcoord = In.PositionScreen.xy / In.PositionScreen.w;
	vSceneTexcoord += vRefraction.xy * In.Texcoord0.w;
	
	Out.Color.rgb = tex2D(scene, vSceneTexcoord).rgb;
	Out.Color.a = 1.0f;
	Out.Color *= In.Color0;
	
	return Out;
}

